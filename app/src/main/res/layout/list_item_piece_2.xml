<?xml version="1.0" encoding="utf-8"?>
<!-- list_item_piece.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Пустой TextView для создания отступа -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp" />


        <TextView
            android:id="@+id/tvPieceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ID"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:columnCount="2"
        android:rowCount="4">

        <TextView
            android:id="@+id/tvPieceNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PieceNumber"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvBatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batch"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvWarehouseId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WarehouseId"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Length"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Width"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvOwnerNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner_number"
            android:textColor="#000000"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/tvProductType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProductType"
            android:textColor="#000000" />

        <!-- Добавьте дополнительные TextView для остальных полей, если нужно -->

    </GridLayout>

</LinearLayout>
